{
    "name": "vscode-tools",
    "displayName": "vscode-tools",
    "description": "A series of tools for VSCode",
    "version": "0.0.1",
    "publisher": "xinlingchao",
    "repository": {
        "url": "https://github.com/douglarek/vscode-tools"
    },
    "license": "MIT",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "tools"
    ],
    "activationEvents": [
        "onCommand:vscode-tools.translate"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-tools.translate",
                "title": "VSCode-tools: Translate"
            }
        ],
        "keybindings": [
            {
                "command": "vscode-tools.translate",
                "key": "alt+1",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "request": "^2.81.0",
        "request-promise": "^4.2.1",
        "@types/request-promise": "^4.1.36"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.1.37",
        "mocha": "^10.2.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
